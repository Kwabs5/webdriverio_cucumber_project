{
  "name": "cucumberjs",
  "version": "1.0.0",
  "description": "This is a cucumber BDD automation framework",
  "main": "index.js",
  "scripts": {
    "selenium-server": "./node_modules/.bin/selenium-standalone start",
    "test": "./node_modules/.bin/wdio ./wdio.conf.js",
    "test:reg": "./node_modules/.bin/wdio ./wdio.conf.js --cucumberOpts.tagExpression='@reg'",
    "test:dev": "./node_modules/.bin/wdio ./wdio.conf.js --cucumberOpts.tagExpression='@dev'",
    "test:int": "./node_modules/.bin/wdio ./wdio.conf.js --cucumberOpts.tagExpression='@int'",
    "test:regression": "./node_modules/.bin/wdio ./wdio.conf.js --cucumberOpts.tagExpression='@regression'"
  },
  "author": "Kwabena Imbeah",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/register": "^7.9.0",
    "@wdio/cli": "^6.1.2",
    "@wdio/cucumber-framework": "^6.1.1",
    "@wdio/local-runner": "^6.1.2",
    "@wdio/selenium-standalone-service": "^6.0.16",
    "@wdio/spec-reporter": "^6.0.16",
    "@wdio/sync": "^6.1.0",
    "chromedriver": "^83.0.0",
    "wdio-chromedriver-service": "^6.0.2",
    "webdriverio": "^6.1.2"
  },
  "dependencies": {
    "@types/webdriverio": "^5.0.0",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0"
  }
}
